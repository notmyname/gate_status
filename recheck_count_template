http://graphite.openstack.org/render/?

from=midnight-{HOWLONGAGO}
&until=midnight+tomorrow

&height=400
&width=850

&bgcolor=ffffff
&fgcolor=000000

&drawNullAsZero=false

&lineMode=staircase

&format=svg

&areaAlpha=.15

&minorY=1

&minorGridLineColor=gray
&majorGridLineColor=gray

&tz=UTC

&fontSize=10

&title=Average Number of Gate Resets

&target=
cactiStyle(color(
    alias(
        divideSeries(
            integral(hitcount(
                sumSeries(
                    scale(
                        stats.zuul.pipeline.gate.job.gate-*-pep8.{SUCCESS,FAILURE},
                        0.5
                    )
                ),
                '{TIMEBUCKET}',alignToInterval=true
            )),
            integral(hitcount(
                stats.gerrit.event.change-merged,
                '{TIMEBUCKET}',alignToInterval=true
            ))
        ),
        'average gate resets'
    ),
    'orange'
))
